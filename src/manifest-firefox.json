{
  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_short_name__",
  "description": "__MSG_extension_desc__",
  "default_locale": "en",
  "version": "0.0.0",
  "version_name": "Dev",
  "icons": {
    "48": "media/img/icons/default/icon-48.png",
    "128": "media/img/icons/default/icon-128.png",
    "256": "media/img/icons/default/icon-256.png",
    "512": "media/img/icons/default/icon-512.png"
  },
  "permissions": [
    "storage",
    "*://*/*"
  ],
  "browser_specific_settings": {
    "gecko": {
        "id": "joinwhilesave@firefox.whilesave.com",
        "data_collection_permissions": {
          "required": [
            "browsingActivity",
            "websiteContent",
            "websiteActivity"
          ],
          "optional": [
            "technicalAndInteraction"
          ]
         }
      }
  },
  "background": {
    "scripts": ["service_worker.js"],
    "persistent": false,
	  "type": "module"
  },
  "browser_action": {
    "default_icon": {
			"48": "media/img/icons/default/icon-48.png",
			"128": "media/img/icons/default/icon-128.png",
			"256": "media/img/icons/default/icon-256.png",
			"512": "media/img/icons/default/icon-512.png"
    }
  },
  "web_accessible_resources": [
    "html/*",
    "media/img/*",
    "media/conf/*",
    "media/css/*",
    "*favicon/*"
  ],
  "content_scripts": [{
    "css": [],
    "js": [
      "media/js/lib/jst.js",
      "media/js/lib/jscs.js",
      "media/js/opts.js",

      "media/js/helper/base/data/dataStore.js",
      "media/js/helper/base/data/supports.js",
      "media/js/helper/base/util/dao.js",
      "media/js/helper/base/util/i18n.js",
			"media/js/helper/base/util/request.js",
			"media/js/helper/base/util/style.js",
			"media/js/helper/base/util/logger.js",
			"media/js/helper/base/util/file.js",
			"media/js/helper/base/util/util.js",
			"media/js/helper/base/util/elementUtil.js",
      "media/js/helper/base/util/featureControl.js",
      "media/js/helper/base/ui/ui.js",

      "media/js/helper/setting/setting.js",
			
			"media/js/helper/inspect/activate.js",
			"media/js/helper/inspect/couponListModal.js",
			"media/js/helper/inspect/inspectCouponsHTM.js",
			"media/js/helper/inspect/mask.js",
			"media/js/helper/inspect/progressModal.js",
			"media/js/helper/inspect/detect/autoDetect.js",
			"media/js/helper/inspect/detect/autoDetectUtil.js",
			
			"media/js/helper/history/goodsHistory.js",
			"media/js/helper/history/goodsRecord.js",

			"media/js/helper/platform/aliexpress.js",
			"media/js/helper/platform/aliexpressSearch.js",
			"media/js/helper/platform/ebay.js",
			"media/js/helper/platform/ebaySearch.js",
			"media/js/helper/platform/bestbuy.js",
			"media/js/helper/platform/bestbuySearch.js",
			"media/js/helper/platform/lazada.js",
			"media/js/helper/platform/lazadaSearch.js",
			"media/js/helper/platform/banggood.js",
			"media/js/helper/platform/banggoodSearch.js",
      "media/js/helper/platform/amazon.js",

      "media/js/helper/engineScreen/searchEnginScreen.js",
      "media/js/helper/subscribe/subscribe.js",

      "media/js/client-page.js"
    ],
    "matches": [
      "*://*/*"
    ],
    "exclude_matches": [
      "https://*/*.txt",
      "https://*/*.png",
      "https://*/*.jpg",
      "https://*/*.jpeg",
      "https://*/*.gif",
      "https://*/*.xml",
      "https://*/*.svg",
      "https://*/*.manifest",
      "https://*/*.log",
      "https://*/*.ini"
    ],
    "run_at": "document_end"
  }]
}
